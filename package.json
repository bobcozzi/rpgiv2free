{
  "name": "rpgivfree",
  "displayName": "Bob Cozzi's IBM i RPG IV to RPG Free Conversion Tool",
  "description": "Bob Cozzi's Convert RPG IV fixed-format to free-format tool add-on for Visual Studio CODE for i.",
  "icon": "images/rpgfree.png",
  "preview": true,
  "private": false,
  "publisher": "CozziResearch",
  "version": "0.0.4",
  "license": "SEE LICENSE in license.txt",
  "engines": {
    "vscode": "^1.70.0"
  },
  "keywords": [
    "ibmi",
    "rpgle",
    "rpgiv",
    "iseries",
    "ilerpg",
    "rpgfree",
    "as400"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bobcozzi/rpgivfree.git"
  },
  "categories": [
    "Other"
  ],
   "contributes": {
    "commands": [
      {
        "command": "rpgconverter.convertToRPGFree",
        "title": "Convert RPG IV to Free Format"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "rpgconverter.convertToRPGFree",
          "when": "resourceExtname =~ /rpg(le)?|sqlrpgle/i",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
  "type": "object",
  "title": "RPG IV Free Format Converter",
  "properties": {
    "rpgivfree.convertBINTOINT": {
      "type": "number",
      "default": 2,
      "enum": [0, 1, 2],
      "enumDescriptions": [
        "0 - Do not convert to Integer",
        "1 - Always convert B (binary) fields to Integer",
        "2 - Convert to Integer only when decimal positions = 0"
      ],
      "description": "Controls how RPG IV B ('binary') fields are converted to integers."
    },
    "rpgivfree.addINZ": {
      "type": "boolean",
      "default": true,
      "description": "Add INZ keyword to data structures that do not have one."
    }
  }
}
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:rpgconverter.convertToRPGFree"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "tsc",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "typescript": "^4.8.0"
  },
  "dependencies": {
    "sql-formatter": "^15.5.2"
  }
}